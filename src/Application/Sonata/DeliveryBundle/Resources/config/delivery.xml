<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="application.sonata.delivery.example.class">Application\Sonata\DeliveryBundle\Example</parameter>
    </parameters>
    -->
    <parameters>
        <parameter key="sonata.delivery.selector.class">Application\Sonata\Component\Delivery\Selector</parameter>
        <parameter key="sonata.delivery.pool.class">Application\Sonata\Component\Delivery\Pool</parameter>
    </parameters>

    <services>

        <service id="sonata.delivery.pool" class="%sonata.delivery.pool.class%" />

        <service id="sonata.delivery.selector.default" class="%sonata.delivery.selector.class%">
            <argument type="service" id="sonata.delivery.pool" />
            <argument type="service" id="sonata.product.pool" />

            <call method="setLogger">
                <argument type="service" id="logger" />
            </call>
        </service>

        <service id="sonata.delivery.method.free_address_required" class="Application\Sonata\Component\Delivery\FreeDelivery">
            <tag name="sonata.delivery.method" />
            <argument>true</argument>
        </service>

        <service id="sonata.delivery.method.free_address_not_required" class="Application\Sonata\Component\Delivery\FreeDelivery">
            <tag name="sonata.delivery.method" />
            <argument>false</argument>
        </service>

        <service id="application.sonata.delivery.take_away" class="Application\Sonata\DeliveryBundle\Model\TakeAwayDelivery">
            <tag name="sonata.delivery.method" />
        </service>
        <service id="application.sonata.delivery.free_courier" class="Application\Sonata\DeliveryBundle\Model\FreeCourierDelivery">
            <tag name="sonata.delivery.method" />
        </service>
        <service id="application.demo.payment.bitcoin" class="Sonata\Bundle\DemoBundle\Payment\Bitcoin">
            <tag name="sonata.payment.method" />
        </service>
    </services>
</container>

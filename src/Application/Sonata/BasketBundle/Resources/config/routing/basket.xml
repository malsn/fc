<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sonata_basket_index" pattern="/">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:index</default>
    </route>

    <!--<route id="sonata_basket_index_json" pattern="/json">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:indexJson</default>
    </route>-->

    <route id="sonata_basket_add_product" pattern="/add-product">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:addProduct</default>
    </route>

    <route id="sonata_basket_delete_product" pattern="/delete-product/{productId}">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:deleteProduct</default>
    </route>

    <!--<route id="sonata_basket_update" pattern="/update">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:update</default>
    </route>-->

    <route id="sonata_basket_update_json" pattern="/update/json">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:updateJson</default>
    </route>

    <route id="sonata_basket_update_element" pattern="/update/{position}">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:updateElement</default>
    </route>

    <route id="sonata_basket_reset" pattern="/reset">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:reset</default>
    </route>

    <route id="sonata_basket_authentication" pattern="/step/authentication">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:authenticationStep</default>
    </route>

    <route id="sonata_basket_delivery_address" pattern="/step/delivery/address">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:deliveryAddressStep</default>
    </route>

    <route id="sonata_basket_delivery" pattern="/step/delivery">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:deliveryStep</default>
    </route>

    <route id="sonata_basket_payment_address" pattern="/step/payment/address">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:paymentAddressStep</default>
    </route>

    <route id="sonata_basket_payment" pattern="/step/payment">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:paymentStep</default>
    </route>

    <route id="sonata_basket_final" pattern="/step/final-review">
        <default key="_controller">ApplicationSonataBasketBundle:Basket:finalReviewStep</default>
    </route>

</routes>
